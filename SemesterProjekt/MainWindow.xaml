<Window x:Class="SemesterProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SemesterProjekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid RenderTransformOrigin="0.475,0.455" ClipToBounds="True">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.5"/>
                <GradientStop Color="#FF982222" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Name="Standard" Content="Standard" HorizontalAlignment="Left" Margin="288,165,0,0" VerticalAlignment="Top" Height="52" Width="170" Click="Standard_Click" Foreground="#FFFF5504" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <Button Name="Creator" Content="Creator Studio" HorizontalAlignment="Left" Height="50" Margin="288,240,0,0" VerticalAlignment="Top" Width="170" Background="{x:Null}" Click="Creator_Click" Foreground="#FFFF5504" BorderBrush="{x:Null}"/>
        <Button Name="Predefined" Content="Predefined" HorizontalAlignment="Left" Height="50" Margin="288,315,0,0" VerticalAlignment="Top" Width="170" Background="{x:Null}" Click="Predefined_Click" BorderBrush="{x:Null}" Foreground="#FFFF5504"/>
        <TextBlock  HorizontalAlignment="Left" Height="78" TextWrapping="Wrap" Text="Welcome to AimTrainer!" VerticalAlignment="Top" Width="288" Foreground="White" FontFamily="Viner Hand ITC" TextAlignment="Center" Margin="229,10,0,0"/>
        <Button x:Name="btn_exit" Content="exit" Margin="288,370,342,20" Click="btn_exit_Click"/>
    </Grid>
</Window>
